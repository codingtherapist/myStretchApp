<%- include('partials/header') -%>

<main class="container">
  <div class="row justify-content-center">
    <section class="col-6 mt-5">
      <div> <img src="https://res.cloudinary.com/dtamwfybo/image/upload/v1668875129/Untitled_design_-_2022-11-19T112955.826_cz78tz.png"  alt="woman meditating"  width="" height=""><br><br><br> </div>
      <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
      <div class="alert alert-danger"><%= el.msg %></div>
      <% }) %> <% } %> <% if (locals.messages.info) { %> <%
      messages.info.forEach( el => { %>
      <div class="alert alert-info"><%= el.msg %></div>
      <% }) %> <% } %>
      <form action="/login" method="POST">
        <div class="mb-3">
          <label for="exampleInputEmail1" class="form-label"
            >Email address</label
          >
          <input
            type="email"
            class="form-control"
            id="exampleInputEmail1"
            aria-describedby="emailHelp"
            name="email"
          />
        </div>
        <div class="mb-3">
          <label for="exampleInputPassword1" class="form-label">Password</label>
          <input
            type="password"
            class="form-control"
            id="exampleInputPassword1"
            name="password"
          />
        </div>
        <button type="submit" class="btn btn-outline-secondary">Submit</button>
      </form><br><br>
      <p>Need to sign up?</p>
      <a href="/signup" type="button" >Create an account</a>
    </section>
  </div>
</main>

<%- include('partials/footer') -%>
